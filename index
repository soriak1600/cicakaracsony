    <script>
        // ===========================================
        // üéµ PLAYLIST - Dropbox linkeket ide!
        // ===========================================
        const playlist = [
            {
                title: "Runaway",
                artist: "AURORA",
                url: "https://www.dropbox.com/scl/fi/vlir79dvdheixf31pdrvm/01.Runaway.mp3?rlkey=ofpz0qc9gpzx0levo9wt5izf3&st=1h9ujg1e&dl=1"
            },
            {
                title: "Running with the Wolves",
                artist: "AURORA",
                url: "https://www.dropbox.com/scl/fi/virjl9bepm5l43z0sfssd/03.Running-With-The-Wolves.mp3?rlkey=he0a06lfhzz9wdftlo4a0koyv&st=887rfyt5&dl=1"
            },
            {
                title: "Running with the Wolves",
                artist: "AURORA (Pablo Nouvelle Remix)",
                url: "https://www.dropbox.com/scl/fi/pcpm4uryx2cijxnfjje9s/17.Running-With-The-Wolves-Pablo-Nouvelle-Remix.mp3?rlkey=qd80g8q58g1t262hb7c553t0g&st=i3dhq6nt&dl=1"
            },
            {
                title: "Exist for Love",
                artist: "AURORA",
                url: "DROPBOX_LINK"
            },
            {
                title: "Everything Matters",
                artist: "AURORA feat. Pomme",
                url: "https://www.dropbox.com/scl/fi/3817f79aw6d0lvijznvaw/02.Everything-Matters-Feat.-Pomme.mp3?rlkey=zomavdfsq0hfab1p2zz4sdiph&st=6636e7l2&dl=1"
            },
            {
                title: "Warrior",
                artist: "AURORA",
                url: "DROPBOX_LINK"
            },
            {
                title: "Cure for Me",
                artist: "AURORA",
                url: "DROPBOX_LINK"
            },
            {
                title: "Conqueror",
                artist: "AURORA",
                url: "https://www.dropbox.com/scl/fi/5ivq47ywi3z7qr07rdkyj/02.Conqueror.mp3?rlkey=48cxnye91aqtzay4490wly1zz&st=mug9k333&dl=1"
            },
            {
                title: "Queendom",
                artist: "AURORA",
                url: "DROPBOX_LINK"
            },
            {
                title: "Dreams",
                artist: "AURORA feat. Nicole Zignago",
                url: "https://www.dropbox.com/scl/fi/imjdwzo3r090e9ps65rnr/20.Dreams-Feat.-Nicole-Zignago.mp3?rlkey=zde64xu3fbrbxtjddeger9mpz&st=k47mj556&dl=1"
            },
            {
                title: "My Name",
                artist: "AURORA feat. Ane Brun",
                url: "https://www.dropbox.com/scl/fi/v23nvctnl7pfyrjars90d/11.My-Name-Feat.-Ane-Brun.mp3?rlkey=kfnxjneiry455jacku1sxgq1e&st=1xya0xk0&dl=1"
            }
        ];
        // ===========================================

        // Create stars
        const starsContainer = document.getElementById('stars');
        for (let i = 0; i < 100; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.left = Math.random() * 100 + '%';
            star.style.top = Math.random() * 100 + '%';
            star.style.width = (Math.random() * 2 + 1) + 'px';
            star.style.height = star.style.width;
            star.style.animationDelay = Math.random() * 3 + 's';
            starsContainer.appendChild(star);
        }

        // Create particles
        const particlesContainer = document.getElementById('particles');
        for (let i = 0; i < 20; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.width = (Math.random() * 4 + 2) + 'px';
            particle.style.height = particle.style.width;
            particle.style.animationDelay = Math.random() * 20 + 's';
            particle.style.animationDuration = (Math.random() * 15 + 15) + 's';
            particlesContainer.appendChild(particle);
        }

        // Player Logic
        const audio = document.getElementById('audio');
        const playBtn = document.getElementById('playBtn');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const progressBar = document.getElementById('progressBar');
        const progress = document.getElementById('progress');
        const currentTimeEl = document.getElementById('currentTime');
        const durationEl = document.getElementById('duration');
        const volumeSlider = document.getElementById('volumeSlider');
        const trackTitle = document.getElementById('trackTitle');
        const trackArtist = document.getElementById('trackArtist');
        const albumArt = document.getElementById('albumArt');
        const playlistItemsEl = document.getElementById('playlistItems');

        let currentTrack = 0;
        let isPlaying = false;

        const emojis = ['üåå', 'üê∫', 'üê∫', 'üíú', 'üå±', 'üåü', 'ü¶ã', 'ü¶Ö', '‚ú®', 'üåô', 'ü§ç'];

        function initPlaylist() {
            playlistItemsEl.innerHTML = playlist.map((track, index) => `
                <div class="playlist-item ${index === 0 ? 'active' : ''}" onclick="loadTrack(${index}); playAudio();">
                    <span class="playlist-item-number">${String(index + 1).padStart(2, '0')}</span>
                    <div class="playlist-item-info">
                        <div class="playlist-item-title">${track.title}</div>
                        <div class="playlist-item-artist">${track.artist}</div>
                    </div>
                    <span class="playlist-item-playing" id="playing-${index}" style="display:none;">‚ô™</span>
                </div>
            `).join('');
        }

        function loadTrack(index) {
            currentTrack = index;
            const track = playlist[index];
            
            audio.src = track.url;
            trackTitle.textContent = track.title;
            trackArtist.textContent = track.artist;
            
            document.querySelector('.album-emoji').textContent = emojis[index] || 'üåå';
            
            document.querySelectorAll('.playlist-item').forEach((item, i) => {
                item.classList.toggle('active', i === index);
                document.getElementById(`playing-${i}`).style.display = 'none';
            });
            
            progress.style.width = '0%';
            currentTimeEl.textContent = '0:00';
        }

        function playAudio() {
            audio.play();
            isPlaying = true;
            playBtn.textContent = '‚è∏';
            albumArt.classList.add('playing');
            document.getElementById(`playing-${currentTrack}`).style.display = 'inline';
        }

        function pauseAudio() {
            audio.pause();
            isPlaying = false;
            playBtn.textContent = '‚ñ∂';
            albumArt.classList.remove('playing');
            document.getElementById(`playing-${currentTrack}`).style.display = 'none';
        }

        playBtn.addEventListener('click', () => {
            if (isPlaying) {
                pauseAudio();
            } else {
                if (!audio.src || audio.src.includes('DROPBOX_LINK')) {
                    loadTrack(0);
                }
                playAudio();
            }
        });

        prevBtn.addEventListener('click', () => {
            currentTrack = (currentTrack - 1 + playlist.length) % playlist.length;
            loadTrack(currentTrack);
            if (isPlaying) playAudio();
        });

        nextBtn.addEventListener('click', () => {
            currentTrack = (currentTrack + 1) % playlist.length;
            loadTrack(currentTrack);
            if (isPlaying) playAudio();
        });

        audio.addEventListener('timeupdate', () => {
            const percent = (audio.currentTime / audio.duration) * 100;
            progress.style.width = percent + '%';
            currentTimeEl.textContent = formatTime(audio.currentTime);
        });

        audio.addEventListener('loadedmetadata', () => {
            durationEl.textContent = formatTime(audio.duration);
        });

        audio.addEventListener('ended', () => {
            currentTrack = (currentTrack + 1) % playlist.length;
            loadTrack(currentTrack);
            playAudio();
        });

        progressBar.addEventListener('click', (e) => {
            const percent = e.offsetX / progressBar.offsetWidth;
            audio.currentTime = percent * audio.duration;
        });

        volumeSlider.addEventListener('input', (e) => {
            audio.volume = e.target.value / 100;
        });

        function formatTime(seconds) {
            if (isNaN(seconds)) return '0:00';
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        // Init
        audio.volume = 0.7;
        initPlaylist();
        loadTrack(0);
    </script>
</body>
